                    # Mesele N 12  
d1 = int(input('D1-yn bahasyny girizin: '))
d2 = int(input('D2-yn bahasyny girizin: '))
multiply = math.pow(d1,2) * (d2,2)
minus = math.pow(d1,2) - (d2,2)
div = math.pow(d1,2) / (d2,2)
plus = math.pow(d1,2) + (d2,2)
print(multiply)
print(minus)
print(div)
print(plus)
